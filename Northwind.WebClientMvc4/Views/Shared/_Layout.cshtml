@using System.Web.Optimization
@using Northwind.WebClientMvc4.Utils
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8"/>
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        
         @Styles.Render("~/Content/bootstrap")
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" media="screen" />
        <style>
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
            .sidebar-nav {
                padding: 9px 0;
            }
        </style>

    </head>
    <body>
        
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="#">Northwind Traders Inc.</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="active">
                                @Html.MenuLink("Home", "Index", "Home")
                            </li>
                            <li>
                                @Html.MenuLink("Customers", "Index", "CustomerAdmin")
                            </li>
                            <li>
                                @Html.MenuLink("About", "Index", "About")
                            </li>
                        </ul> 
                    </div>
                </div>
            </div>
        </div>
        <script src="@Url.Content("~/Scripts/jquery-1.9.1.js")"></script>
        @Scripts.Render("~/bundles/bootstrap")
        @RenderBody()

    </body>
</html>
