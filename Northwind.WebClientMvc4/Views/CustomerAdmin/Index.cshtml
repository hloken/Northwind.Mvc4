@model dynamic

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" ng-app="ngCustomerAdmin">
    <div class="hero-unit">
        <h1 id="header">Customers</h1>
        <p>Customer administration</p>
    </div>
    <div class="row-fluid" ng-controller="CustomerListController" >
        <ng-view></ng-view>
        <p>
            <label>Customer ID</label>
            <input type="text" ng-model="customerId"/>
        </p>
        <p>
            <label>Company name</label>
            <input type="text" ng-model="companyName"/>
        </p>
        <p>
            <label>Contact name</label>
            <input type="text" ng-model="contactName"/>
        </p>
        <p>
            <button class="btn btn-success" ng-click="addCustomerToDb()">Add</button>
        </p>
        <h3>Number of customers: <ng-pluralize count = "customers.length" when="pluralizer"></ng-pluralize></h3>

    </div>
</div>
<script src="@Url.Content("~/Scripts/angular.js")"></script>
<script src="@Url.Content("~/Scripts/angular-resource.js")"></script>
<script src="@Url.Content("~/Scripts/CustomerAdmin/customerAdmin.js")"></script>
